<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<runscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="Mt. Diablo">

  <run start="0.0" end="6000" dt="0.1"
       time_warp="5"
       enable_gui="true"
       network_gui="false"
       start_paused="false"
       full_screen="false"
       window_width="800"
       window_height="600"/>

  <multi_threaded num_threads="5">false</multi_threaded>
  <stream_port>50051</stream_port>
  <stream_ip>localhost</stream_ip>
  <end_condition>time</end_condition> <!-- time, one_team, none-->

  <camera mode="follow"
          follow_id="1"
          show_fps="true"></camera>
    

  <grid_spacing>10</grid_spacing>
  <grid_size>1000</grid_size>

  <terrain>mt_diablo_dted</terrain>

  <background_color>191 191 191</background_color> <!-- Red Green Blue -->
  <gui_update_period>10</gui_update_period> <!-- milliseconds -->

  <create_latest_dir>false</create_latest_dir>

  <latitude_origin>37.881722</latitude_origin>
  <longitude_origin>-121.914639</longitude_origin>
  <altitude_origin>0</altitude_origin>
  <show_origin>true</show_origin>
  <origin_length>10</origin_length>

  <!-- ========================== Start of plugins ========================= -->

  <!-- Collision interaction, uavs cannot collide with one another (team_collisions is false) -->
  <entity_interaction collision_range="10"
                      enable_team_collisions="false"
                      startup_collisions_only="true">SimpleCollision</entity_interaction>
  <!-- Terrain collision interaction, uav will be killed if they touch the terrain-->
  <entity_interaction interpolate_terrain="true">TerrainCollision</entity_interaction>

  <network>GlobalNetwork</network>
  <network>LocalNetwork</network>

  <entity>
    <team_id>2</team_id>
    <color>255 0 0</color>
    <count>1</count>
    <health>1</health>
    <radius>2</radius>

    <variance_x>0</variance_x>
    <variance_y>0</variance_y>
    <variance_z>0</variance_z>

    <x>50</x>
    <y>0</y>
    <z>1200</z>

    <heading>90</heading>
    <controller>SimpleAircraftControllerPID</controller>
    <motion_model>SimpleAircraft</motion_model>
    <visual_model>zephyr-red</visual_model>
    <autonomy target_height="30">GroundFollower</autonomy>
    <base>
      <latitude>35.719961</latitude>
      <longitude>-120.767304</longitude>
      <altitude>300</altitude>
      <radius>25</radius>
    </base>
  </entity>

</runscript>

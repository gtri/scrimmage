    <name>uav_entity</name>
    <team_id>1</team_id>
    <color>77 77 255</color>
    <count>${count=1}</count>
    <health>1</health>
    <radius>1</radius>

    <x>0</x>
    <y>0</y>
    <z>100</z>
    <heading>0</heading>

    <autonomy>Straight</autonomy>
    <controller>DirectController</controller>
    <motion_model>Ballistic</motion_model>
    <visual_model>zephyr-blue</visual_model>
  </entity>

  <!-- Single autonomy, single controller, no motion model -->
  <entity>
    <name>uav_entity</name>
    <team_id>1</team_id>
    <color>77 77 255</color>
    <count>${count=1}</count>
    <health>1</health>
    <radius>1</radius>

    <x>0</x>
    <y>0</y>
    <z>100</z>
    <heading>0</heading>

    <autonomy>Straight</autonomy>
    <controller>SimpleAircraftControllerPID</controller>
    <!--<motion_model>SimpleAircraft</motion_model>-->
    <visual_model>zephyr-blue</visual_model>
  </entity>

  <!-- Single autonomy, no controller, no motion model -->
  <entity>
    <name>uav_entity</name>
    <team_id>1</team_id>
    <color>77 77 255</color>
    <count>${count=1}</count>
    <health>1</health>

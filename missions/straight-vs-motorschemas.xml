<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<runscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="Straight flying">

  <run start="0.0" end="50" dt="0.1"
       time_warp="10"
       enable_gui="true"
       network_gui="false"
       start_paused="true"/>

  <stream_port>50051</stream_port>
  <stream_ip>localhost</stream_ip>

  <end_condition>time, all_dead</end_condition> <!-- time, one_team, none-->

  <grid_spacing>10</grid_spacing>
  <grid_size>1000</grid_size>

  <terrain>mcmillan</terrain>
  <background_color>191 191 191</background_color> <!-- Red Green Blue -->
  <gui_update_period>10</gui_update_period> <!-- milliseconds -->

  <plot_tracks>false</plot_tracks>
  <output_type>all</output_type>
  <show_plugins>false</show_plugins>

  <log_dir>~/.scrimmage/logs</log_dir>

  <latitude_origin>35.721025</latitude_origin>
  <longitude_origin>-120.767925</longitude_origin>
  <altitude_origin>300</altitude_origin>
  <show_origin>true</show_origin>
  <origin_length>10</origin_length>

  <entity_interaction>SimpleCollision</entity_interaction>

  <metrics>SimpleCollisionMetrics</metrics>

  <network>GlobalNetwork</network>
  <network>LocalNetwork</network>
  
  <!-- uncomment "seed" and use integer for deterministic results -->
  <!--<seed>2147483648</seed>-->

  <!-- ========================== TEAM 1 ========================= -->
  <!--                   No Collision Avoidance                    -->
  <entity>
    <team_id>1</team_id>
    <count>20</count>
    <autonomy>Straight</autonomy>

    <color>255 0 0</color>
    <health>1</health>
    <radius>1</radius>

    <variance_x>10</variance_x>
    <variance_y>10</variance_y>
    <variance_z>10</variance_z>

    <x>-1000</x>
    <y>0</y>
    <z>200</z>
    <heading>0</heading>
    <controller>SimpleAircraftControllerPID</controller>
    <motion_model>SimpleAircraft</motion_model>
    <visual_model>zephyr-blue</visual_model>
  </entity>

  <entity>
    <team_id>1</team_id>
    <count>20</count>
    <autonomy>Straight</autonomy>

    <color>255 0 0</color>
    <health>1</health>
    <radius>2</radius>

    <variance_x>10</variance_x>
    <variance_y>10</variance_y>
    <variance_z>10</variance_z>

    <x>50</x>
    <y>0</y>
    <z>200</z>

    <heading>180</heading>
    <altitude>200</altitude>
    <controller>SimpleAircraftControllerPID</controller>
    <motion_model>SimpleAircraft</motion_model>
    <visual_model>zephyr-red</visual_model>
  </entity>

  <!-- ========================== TEAM 2 ========================= -->
  <!--          Running MotorSchemas with Collision Avoidance      -->
  <entity>
    <team_id>1</team_id>
    <count>20</count>

    <!--<sensor>NoisyContacts</sensor>-->
    
    <autonomy max_speed="30"
              show_shapes="true"
              behaviors="
       [ AvoidEntityMS gain='1.0' contacts='truth' sphere_of_influence='20' minimum_range='5' ]
       [ MoveToGoalMS gain='1.0' use_initial_heading='true goal='100,0,0']"       
       >MotorSchemas</autonomy>

    <color>255 0 0</color>
    <health>1</health>
    <radius>1</radius>

    <variance_x>10</variance_x>
    <variance_y>10</variance_y>
    <variance_z>10</variance_z>

    <x>-1000</x>
    <y>600</y>
    <z>200</z>
    <heading>0</heading>
    <controller>SimpleAircraftControllerPID</controller>
    <motion_model>SimpleAircraft</motion_model>
    <visual_model>zephyr-blue</visual_model>

  </entity>

  <entity>
    <team_id>2</team_id>
    <count>20</count>

    <!--<sensor>NoisyContacts</sensor>-->
    
    <autonomy max_speed="30"
              show_shapes="true"
              behaviors="
       [ AvoidEntityMS gain='1.0' contacts='truth' sphere_of_influence='20' minimum_range='5' ]
       [ MoveToGoalMS gain='1.0' use_initial_heading='true goal='100,0,0']"       
       >MotorSchemas</autonomy>
       
    <color>255 0 0</color>
    <health>1</health>
    <radius>2</radius>

    <variance_x>10</variance_x>
    <variance_y>10</variance_y>
    <variance_z>10</variance_z>

    <x>50</x>
    <y>600</y>
    <z>200</z>

    <heading>180</heading>
    <altitude>200</altitude>
    <controller>SimpleAircraftControllerPID</controller>
    <motion_model>SimpleAircraft</motion_model>
    <visual_model>zephyr-red</visual_model>
  </entity>

</runscript>

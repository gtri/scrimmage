<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<runscript xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="Straight flying">

  <run start="0.0" end="1000" dt="0.1"
       time_warp="20"
       enable_gui="true"
       network_gui="false"
       start_paused="true"/>

  <multi_threaded num_threads="8">false</multi_threaded>
  <stream_port>50051</stream_port>
  <stream_ip>localhost</stream_ip>

  <end_condition>time, all_dead</end_condition> <!-- time, one_team, none-->

  <grid_spacing>10</grid_spacing>
  <grid_size>1000</grid_size>

  <!--<terrain>mcmillan</terrain>-->
  <background_color>191 191 191</background_color> <!-- Red Green Blue -->
  <gui_update_period>10</gui_update_period> <!-- milliseconds -->

  <plot_tracks>false</plot_tracks>
  <output_type>all</output_type>
  <show_plugins>false</show_plugins>

  <log_dir>~/.scrimmage/logs</log_dir>
  <create_latest_dir>true</create_latest_dir>

  <latitude_origin>35.721025</latitude_origin>
  <longitude_origin>-120.767925</longitude_origin>
  <altitude_origin>300</altitude_origin>
  <show_origin>true</show_origin>
  <origin_length>10</origin_length>

  <enable_screenshots min_period="1.0" start="8.3" end="15.3">false</enable_screenshots>

  <!-- Blue Side (Team 1) is on the positive X side -->
  <entity_interaction name="blue_boundary"
                      id="1"
                      team_id="1"
                      type="cuboid"
                      lengths="500, 500, 500"
                      center="250, 0, 250"
                      color="0 0 255"
                      >Boundary</entity_interaction>

  <entity_interaction name="blue_flag"
                      id="2"
                      team_id="1"
                      type="sphere"
                      radius="5"
                      center="350, 0, 200"
                      color="0 0 255"
                      opacity="0.5"
                      >Boundary</entity_interaction>

  <!-- Red Side (Team 2) is on the negative X side -->
  <entity_interaction name="red_boundary"
                      id="3"
                      team_id="2"
                      type="cuboid"
                      lengths="500, 500, 500"
                      center="-250, 0, 250"
                      color="255 0 0"
                      >Boundary</entity_interaction>

  <entity_interaction name="red_flag"
                      id="4"
                      team_id="2"
                      type="sphere"
                      radius="5"
                      center="-350, 0, 200"
                      color="255 0 0"
                      opacity="0.5"
                      >Boundary</entity_interaction>

  <entity_interaction name="game_boundary"
                      id="5"
                      team_id="3"
                      type="cuboid"
                      lengths="1000, 500, 500"
                      center="0, 0, 250"
                      color="0 255 0"
                      show_boundary="false"
                      >Boundary</entity_interaction>

  <entity_interaction active_boundary_ids="5">EnforceBoundaryInteraction</entity_interaction>

  <entity_interaction name="BlueCaptureBoundary" boundary_id="1" capture_range="5">CaptureInBoundaryInteraction</entity_interaction>
  <entity_interaction name="RedCaptureBoundary"  boundary_id="3" capture_range="5">CaptureInBoundaryInteraction</entity_interaction>

  <entity_interaction name="BlueFlagCapture" flag_boundary_id="2" capture_boundary_id="3">FlagCaptureInteraction</entity_interaction>
  <entity_interaction name="RedFlagCapture" flag_boundary_id="4" capture_boundary_id="1">FlagCaptureInteraction</entity_interaction>

  <entity_interaction collision_range="2">SimpleCollision</entity_interaction>

  <metrics team_collisions_w="-5" non_team_collisions_w="0" flight_time_w="0">SimpleCollisionMetrics</metrics>
  <metrics TeamCapture_weight="0" NonTeamCapture_weight="1">SimpleCaptureMetrics</metrics>
  <metrics flags_taken_w="10" flags_captured_w="100">FlagCaptureMetrics</metrics>

  <network>GlobalNetwork</network>
  <network>LocalNetwork</network>
  <network name="comms">SphereNetwork</network>

  <!-- uncomment "seed" and use integer for deterministic results -->
  <seed>1017907566</seed>

  <!-- ====================== Blue Team (Team 1) ========================= -->
  <!-- The blue team defensive agents -->
  <entity>
    <team_id>1</team_id>
    <color>77 77 255</color>
    <count>1</count>
    <health>1</health>
    <radius>1</radius>

    <variance_x>20</variance_x>
    <variance_y>20</variance_y>
    <variance_z>10</variance_z>

    <x>400</x>
    <y>0</y>
    <z>200</z>
    <heading>180</heading>

    <autonomy boundary_id="1">BoundaryDefense</autonomy>

    <controller>DirectController</controller>
    <motion_model max_speed = "10">SingleIntegrator</motion_model>
    <visual_model>sphere</visual_model>
  </entity>

  <!-- The blue team flag capture agents -->
  <entity>
    <team_id>1</team_id>
    <color>77 77 255</color>
    <count>1</count>
    <health>1</health>
    <radius>1</radius>

    <variance_x>20</variance_x>
    <variance_y>20</variance_y>
    <variance_z>10</variance_z>

    <x>400</x>
    <y>200</y>
    <z>200</z>
    <heading>180</heading>

    <autonomy flag_boundary_id="4" capture_boundary_id="1">TakeFlag</autonomy>

    <controller>DirectController</controller>
    <motion_model max_speed = "10">SingleIntegrator</motion_model>
    <visual_model>sphere</visual_model>
  </entity>

  <!-- ====================== Red Team (Team 2) ========================= -->
  <!-- The red team defensive agents -->
  <entity>
    <team_id>2</team_id>
    <color>255 0 0</color>
    <count>1</count>
    <health>1</health>
    <radius>2</radius>

    <variance_x>20</variance_x>
    <variance_y>20</variance_y>
    <variance_z>20</variance_z>

    <x>-400</x>
    <y>0</y>
    <z>200</z>

    <heading>0</heading>
    <altitude>200</altitude>

    <autonomy boundary_id="3">BoundaryDefense</autonomy>
    <controller>DirectController</controller>
    <motion_model max_speed="10">SingleIntegrator</motion_model>
    <visual_model>sphere</visual_model>

  </entity>

  <!-- The red team flag capture agents-->
  <entity>
    <team_id>2</team_id>
    <color>255 0 0</color>
    <count>1</count>
    <health>1</health>
    <radius>2</radius>

    <variance_x>20</variance_x>
    <variance_y>20</variance_y>
    <variance_z>20</variance_z>

    <x>-400</x>
    <y>-200</y>
    <z>200</z>

    <heading>0</heading>
    <altitude>200</altitude>

    <autonomy flag_boundary_id='2' capture_boundary_id='3'>TakeFlag</autonomy>
    <controller>DirectController</controller>
    <motion_model max_speed="10">SingleIntegrator</motion_model>
    <visual_model>sphere</visual_model>

  </entity>

</runscript>
